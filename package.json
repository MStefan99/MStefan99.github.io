{
  "name": "website",
  "version": "1.0.0",
  "description": "Personal website",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "run-p watch dev-server live-reload",

    "dev-server": "serve dist -L -C -l 3011",
    "live-reload": "node live-reload.js",

    "build": "run-p build:*",
    "build:style": "postcss style/style.css -o dist/style/style.css",
    "build:pages": "pug pages -o dist",
    "build:files": "node copy-files.js files img js robots.txt sitemap.xml dist",

    "watch": "run-p watch:*",
    "watch:style": "nodemon --config nodemon-tw.json --exec npm run build:style",
    "watch:pages": "nodemon --config nodemon-pug.json --exec npm run build:pages",
    "watch:files": "nodemon --config nodemon-files.json --exec npm run build:files"
  },
  "author": "",
  "license": "GPL-3.0",
  "devDependencies": {
    "nodemon": "^3.0.1",
    "serve": "^14.2.1",
    "ws": "^8.14.2"
  },
  "dependencies": {
    "@mstefan99/argumented": "^1.0.0",
    "autoprefixer": "^10.4.16",
    "cssnano": "^6.0.1",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^10.1.0",
    "postcss-import": "^15.1.0",
    "pug": "^3.0.2",
    "pug-cli": "^1.0.0-alpha6",
    "tailwindcss": "^3.3.5"
  }
}
