{
  "name": "website",
  "version": "1.0.0",
  "description": "Personal website",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "run-p watch serve live-reload",
    "serve": "serve dist -L -C -l 3011",
    "live-reload": "node live-reload.js",
    "strip-medatata": "node strip-metadata.js img",
    "build": "run-p build:*",
    "build:style": "npx @tailwindcss/cli -i style/style.css -o dist/style/style.css",
    "build:pages": "pug pages -o dist -O env.cjs",
    "build:files": "node copy-files.js files img js robots.txt dist",
    "watch": "run-p watch:*",
    "watch:style": "npx @tailwindcss/cli -i style/style.css -o dist/style/style.css --watch",
    "watch:pages": "pug pages -o dist -O env.cjs -w",
    "watch:files": "nodemon --config nodemon-files.json --exec npm run build:files"
  },
  "author": "",
  "license": "GPL-3.0",
  "devDependencies": {
    "nodemon": "^3.1.11",
    "serve": "^14.2.5",
    "ws": "^8.18.3"
  },
  "dependencies": {
    "@tailwindcss/cli": "^4.1.17",
    "dotenv": "^17.2.3",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^11.0.1",
    "pug": "^3.0.3",
    "pug-cli": "^1.0.0-alpha6",
    "sharp": "^0.34.5",
    "tailwindcss": "^4.1.17"
  }
}
